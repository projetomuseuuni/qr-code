<style>
  main {
    margin: auto;
    padding: var(--spacing--medium);
    max-width: 1000px;

    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: center;
  }

  h1 {
    display: block;
    text-align: center;

    margin-bottom: var(--spacing--large);

    font-size: var(--font-size-fluid-3);
    color: var(--color__neutral--darker);
  }

  .content {
    max-width: 80ch;
    margin-top: var(--spacing--large);

    color: var(--color__neutral--dark);
  }

  ul {
    width: 100%;
    padding-left: 0;

    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;

    gap: var(--spacing--small);

    padding-top: var(--spacing--medium);
  }

  h3 {
    width: 100%;
    text-align: center;

    font-size: var(--font__size--large);
    color: var(--color__neutral--darker);
  }

  li {
    position: relative;

    list-style: none;
  }

  li a,
  li a:visited {
    font-size: var(--font__size--regular);

    color: var(--color__brand--normal);
    text-decoration-color: var(--color__brand--normal);
  }

  li a::after {
  }
</style>
